#!/bin/bash

#SBATCH --partition=gpu_h100
#SBATCH --gpus=1
#SBATCH --job-name=RunLatents2018_2020
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=9
#SBATCH --time=48:00:00
#SBATCH --output=jobs/slurm_outputs/run_latents_2018_2020_%A.out
#SBATCH --error=jobs/slurm_outputs/run_latents_2018_2020_%A.err

module purge
module load 2023
module load CUDA/12.4.0
module load Anaconda3/2023.07-2

source activate aurora-highres
CODE_DIR="$HOME/aurora-highres"
DATA_DIR="/projects/prjs1858"
echo "DATA_DIR is set to: $DATA_DIR"

cd $CODE_DIR
export PYTHONPATH="."
python examples/run_year_forward_with_latents_zarr.py \
    --start-year 2018 \
    --end-year 2020 \
    --output-zarr "$DATA_DIR/latents_europe_2018_2020.zarr" \
    --work-dir "$DATA_DIR/run_year_forward_latents_zarr" \
    --skip-existing
